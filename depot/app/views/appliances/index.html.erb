<p id="notice"><%= notice %></p>

<h1>Listing Appliances</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Time</th>
      <th>Day</th>
      <th>Power</th>
      <th>Total power</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appliances.each do |appliance| %>
      <tr>
        <td><%= appliance.id %></td>
        <td><%= appliance.time %></td>
        <td><%= appliance.day %></td>
        <td><%= appliance.power %></td>
        <td><%= appliance.total_power %></td>
        <td><%= link_to 'Show', appliance %></td>
        <td><%= link_to 'Edit', edit_appliance_path(appliance) %></td>
        <td><%= link_to 'Destroy', appliance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

